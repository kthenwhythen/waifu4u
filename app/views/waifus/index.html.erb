<h1>Listing waifus</h1>

<%= link_to 'New waifu', new_waifu_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Anime</th>
    <th>Image_url</th>
    <th></th>
  </tr>

  <% @waifus.each do |waifu| %>
    <tr>
      <td><%= waifu.name %></td>
      <td><%= waifu.anime %></td>
      <td><%= link_to 'Show', waifu_path(waifu) %></td>
      <td><%= link_to 'Edit', edit_waifu_path(waifu) %></td>
      <td><%= link_to 'Destroy', waifu_path(waifu),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<button type="button" class="btn btn-primary">Primary</button>